# LLM Provider: 'anthropic' or 'groq'
LLM_PROVIDER=anthropic

# Anthropic API Key (recommended)
ANTHROPIC_API_KEY=sk-ant-your_api_key_here

# Groq API Key (alternative)
GROQ_API_KEY=gsk_your_api_key_here

# LLM Model
LLM_MODEL=claude-sonnet-4-20250514

# Database paths (SQLite fallback)
DATABASE_PATH=./data/legal.db
CHROMA_PATH=./data/chroma

# Database mode: 'supabase' or 'sqlite'
DB_MODE=sqlite

# Supabase (required when DB_MODE=supabase)
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_KEY=eyJ...your-anon-key...
SUPABASE_SERVICE_KEY=eyJ...your-service-role-key...

# Pipeline settings
PIPELINE_CRAWL_INTERVAL=168
PIPELINE_RATE_LIMIT=4
PIPELINE_MAX_PAGES=20

# Embedding settings
EMBEDDING_MODEL=bkai-foundation-models/vietnamese-bi-encoder
EMBEDDING_DIMENSION=768

# Logging
LOG_LEVEL=INFO
